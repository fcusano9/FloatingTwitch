{
	"name": "FloatingTwitch",
	"description": "Open Twitch streams as a floating, always on top, bezel-less window screen.",    
	"version": "1.0",
	"manifest_version": 2,
	"app": {
		"background": {
			"scripts": ["background.js"]
		}
	},
	"icons": {
		"16": "images/logo16.png",
		"32": "images/logo32.png",
		"128": "images/logo128.png"
	},
	"permissions": [
		"webview",
		"app.window",
		"app.window.alwaysOnTop",
		"fullscreen"
	]
}
