
{
	"name": "FloatingTwitch Extension",
	"version": "1.0",
	"description": "Open Twitch streams as a floating, always on top, bezel-less window screen.",
	"permissions": ["activeTab", "declarativeContent", "storage"],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"page_action": {
		"default_icon": {
			"16": "images/logo16.png",
			"32": "images/logo32.png",
			"128": "images/logo128.png"
		}
	},
	"icons": {
		"16": "images/logo16.png",
		"32": "images/logo32.png",
		"128": "images/logo128.png"
	},
	"options_page": "options.html",
	"manifest_version": 2
}